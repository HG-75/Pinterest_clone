<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1546349851-64285be8e9fa?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl leading-none tracking-tighter capitalize text-center font-semibold text-zinc-700"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 inline-block text-zinc-500 font-semibold" href="#"
        >Forgot password ?</a
      >
      <input
        class="border-2 rounded-full block w-full px-3 py-2 mt-2 bg-red-600 text-white"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy Notice at
        collection
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Dont have an account ?</a
    >
  </div>
</div>

